<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDescriptionActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="118dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/course_num_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Course_Num"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/course_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="55dp"
                android:text="Course_Name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/course_instructors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="95dp"
                android:text="Instructors: "
                android:textSize="15dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/course_instructors"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/course_desc_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course_Description" />
            </ScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>